pkgname=TorghostNG
pkgver=1.2
pkgrel=1
pkgdesc="TorghostNG là một công cụ giúp bạn kết nối Internet ẩn danh qua Tor. TorghostNG Được gõ lại từ TorGhost với Python 3"
arch=('x86_64')
url="https://github.com/HuynhBio/TorghostNG"
license=('GPL3')
depends=('python' 'macchanger' 'tor')
makedepends=('pyinstaller>=3.6')
source=("git+https://github.com/HuynhBio/${pkgname}.git")
md5sums=('SKIP')

build() {
  cd $srcdir/${pkgname}
  pyinstaller --onefile torghostng.py 
}

package() {
  cd ${srcdir}/${pkgname}
  mkdir -p ${pkgdir}/usr/bin
  install -m755 dist/torghostng ${pkgdir}/usr/bin/torghostng
  mkdir -p ${pkgdir}/usr/bin/torngconf
  install -m644 torngconf/Version ${pkgdir}/usr/bin/torngconf/Version
  install -m644 torngconf/langconf.txt ${pkgdir}/usr/bin/torngconf/langconf.txt
  install -m644 torngconf/theme.py ${pkgdir}/usr/bin/torngconf/theme.py
  chown -R root:root ${pkgdir}/usr/bin
  chown -R root:root ${pkgdir}/usr/bin/torngconf
}
